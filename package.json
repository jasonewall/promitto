{
  "name": "@jasonewall/promitto",
  "private": false,
  "version": "0.1.1",
  "description": "Easier mocked promises to control resolutions and await to the end of a chain",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
